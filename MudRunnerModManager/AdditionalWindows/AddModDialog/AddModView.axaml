<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:textInput="clr-namespace:MudRunnerModManager.AdditionalWindows.TextInputDialog"
			 xmlns:selectItem="clr-namespace:MudRunnerModManager.AdditionalWindows.SelectItemDialog"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"			 
             x:Class="MudRunnerModManager.AdditionalWindows.AddModDialog.AddModView">
	<Grid RowDefinitions="auto, auto"
		  Margin="2">
		<textInput:TextInputView DataContext="{Binding TextInputVM}"
								 MaxWidth="350"/>
		<selectItem:SelectItemView Grid.Row="1"
								   DataContext="{Binding SelectItemVM}"
								   MaxWidth="350"/>
	</Grid>
</UserControl>
